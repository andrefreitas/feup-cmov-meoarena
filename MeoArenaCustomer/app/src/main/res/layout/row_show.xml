<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/show_name"
        android:layout_marginTop="7dp"
        android:layout_toStartOf="@+id/show_price"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="2dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/show_date"
        android:layout_toEndOf="@+id/show_name"
        android:layout_below="@+id/show_name"
        android:layout_alignStart="@+id/show_name"
        android:layout_marginBottom="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5â‚¬"
        android:id="@+id/show_price"
        android:layout_alignBottom="@+id/show_date"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="46dp"
        android:layout_alignTop="@+id/show_name"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/show_seats"
        android:layout_below="@+id/show_date"
        android:layout_alignStart="@+id/show_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/show_available"
        android:layout_below="@+id/show_date"
        android:layout_alignStart="@+id/show_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_id"
        android:visibility="gone"
        android:layout_below="@+id/show_date"
        android:layout_alignStart="@+id/show_date" />


</RelativeLayout>