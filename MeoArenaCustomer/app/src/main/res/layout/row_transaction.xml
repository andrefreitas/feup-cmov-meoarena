<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:id="@+id/transaction_description"
        android:layout_marginTop="7dp"
        android:layout_toStartOf="@+id/transaction_price"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="2dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/transaction_date"
        android:layout_toEndOf="@+id/transaction_description"
        android:layout_below="@+id/transaction_description"
        android:layout_alignStart="@+id/transaction_description"
        android:layout_marginBottom="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5â‚¬"
        android:id="@+id/transaction_price"
        android:layout_alignBottom="@+id/transaction_date"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="46dp"
        android:layout_alignTop="@+id/transaction_description"
        android:textSize="25sp"
        android:gravity="center_vertical"/>




</RelativeLayout>