<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.feup.terminal.app.MenuActivity">


    <ImageButton
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:id="@+id/validateTickets"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dip"
        android:src="@drawable/ticket"
        android:layout_marginLeft="15dip" />

    <ImageButton
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:id="@+id/validateOrders"
        android:layout_alignBottom="@+id/validateTickets"
        android:layout_toEndOf="@+id/validateTickets"
        android:layout_marginLeft="30dip"
        android:src="@drawable/cart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tickets"
        android:id="@+id/textView"
        android:layout_below="@+id/validateTickets"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:layout_toStartOf="@+id/validateOrders" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orders"
        android:id="@+id/textView2"
        android:gravity="center_horizontal"
        android:layout_toStartOf="@+id/validateOrders"
        android:layout_below="@+id/validateOrders"
        android:layout_alignStart="@+id/validateOrders"
        android:layout_alignEnd="@+id/validateOrders" />
</RelativeLayout>
